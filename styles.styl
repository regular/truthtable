@import 'node_modules/css-colors-solarized/styles/colors-solarized.styl'

cellBorderColor = base00()
textColor = base02()
highlightColor = alpha(sgreen(), 0.3)
highlightRadius = 70%
highlightFallOff = 10%

.truthtable
    color textColor
    display flex
    flex-direction column

    .row:first-child
        font-style italic
        font-weight bold
        sub
            font-size 40%
        border-bottom 1px solid cellBorderColor
    .row
        display flex
        flex-direction row
        background-color base3()
    .row:nth-child(odd)
        background-color base2()
    .inputs, .outputs
        display flex
        flex-direction row
    .inputs
        padding-right .2em
        border-right 2px solid cellBorderColor
    .outputs
        padding-left .2em
    .cell
        width 2em
        text-align center
        padding .5em
    .inputs .cell
        border-right 1px solid cellBorderColor
        &:last-child
            border-right none
    .outputs .cell
        border-left 1px solid cellBorderColor
        &:first-child
            border-left none

    .outputs .cell.on
         background-image:
             radial-gradient(
                circle closest-side,
                    highlightColor 0%,
                    highlightColor highlightRadius,
                    transparent highlightRadius + highlightFallOff
                );

